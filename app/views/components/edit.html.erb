<h2>Edit component <%= @component.id %></h2>

<%= form_with model: @component do |form| %>
  <p><%= form.label :body, 'component description' %></p>
  <p><%= form.text_area :body, rows: 5 %></p>
  <p><%= form.label :user_id %></p>
  <p><%= form.text_field :user_id %></p>
  <p><%= form.submit 'save' %></p>
<% end %>